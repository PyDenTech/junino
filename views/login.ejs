<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Login / Cadastro</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* container das duas forms lado a lado */
        .form-container {
            width: 440px;
            overflow: hidden;
            margin: 40px auto;
            position: relative;
            border: 3px dashed #d84315;
            border-radius: 8px;
            background: #fff8e1;
        }

        .form-slider {
            display: flex;
            width: 880px;
            /* 2√ó440 */
            transition: transform 0.6s ease;
        }

        .form-panel {
            width: 440px;
            padding: 32px;
            box-sizing: border-box;
        }

        /* t√≠tulos */
        .form-panel h2 {
            font-family: 'Amatic SC', cursive;
            font-size: 2em;
            text-align: center;
            margin-bottom: 20px;
            color: #e64a19;
        }

        /* links para alternar */
        .form-panel .switch {
            display: block;
            text-align: center;
            margin-top: 12px;
            color: #d84315;
            cursor: pointer;
            text-decoration: underline;
        }

        /* ocultando a segunda form por padr√£o */
        .form-container.register-active .form-slider {
            transform: translateX(-440px);
        }

        /* inputs e bot√µes */
        .form-panel input {
            width: 100%;
            padding: 12px;
            margin-bottom: 16px;
            border: 2px solid #d84315;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
            font-size: 1em;
        }

        .form-panel button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 4px;
            background: #d84315;
            color: #fff;
            font-size: 1.1em;
            cursor: pointer;
            font-family: 'Roboto', sans-serif;
        }

        .form-panel button:hover {
            background: #b71c1c;
        }

        /* notifica√ß√µes dentro do login */
        .login-alert {
            text-align: center;
            padding: 10px;
            margin-bottom: 16px;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
        }

        .login-alert.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .login-alert.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
    </style>
</head>

<body>
    <div class="bandeirinhas-top">
        <% const pngs=['flag1.png','flag2.png']; const svgs=['flag3.svg','flag4.svg','flag5.svg']; for (let i=0; i < 49;
            i++) { if (i % 2===0) { const png=pngs[(i/2) % pngs.length]; %>
            <img src="/img/<%= png %>" class="flag png-flag" alt="Bandeirinha">
            <% } else { const svg=svgs[Math.floor(i/2) % svgs.length]; const cls=svg.replace('.svg',''); %>
                <span class="flag svg-flag <%= cls %>"></span>
                <% } } %>
    </div>




    <!-- cabe√ßalho com fogueira -->
    <header>
        <span class="fire"><img src="https://cdn.pixabay.com/photo/2012/04/12/19/11/fire-30231_1280.png" alt="fogueira"
                style="width: 65px;"></span>
        <h1>Login Administrativo</h1>
        <% if (success) { %>
            <div id="alert" class="notification success">
                üéâ Agendamento salvo com sucesso!
            </div>
            <script>
                // esconde ap√≥s 5s
                setTimeout(() => {
                    const alert = document.getElementById('alert');
                    if (alert) alert.style.display = 'none';
                }, 5000);
            </script>
            <% } %>
    </header>

    <div class="form-container" id="formContainer">
        <div class="form-slider">
            <!-- LOGIN PANEL -->
            <div class="form-panel">
                <h2>Entrar</h2>
                <% if (err==='login' ) { %>
                    <div class="login-alert error">Credenciais inv√°lidas.</div>
                    <% } %>
                        <% if (success) { %>
                            <div class="login-alert success">Cadastro realizado! Fa√ßa login.</div>
                            <% } %>
                                <form action="/login" method="POST">
                                    <input type="email" name="email" placeholder="E-mail" required>
                                    <input type="password" name="password" placeholder="Senha" required>
                                    <button type="submit">Entrar</button>
                                </form>
                                <span class="switch" id="toRegister">N√£o tem cadastro? Cadastre-se aqui.</span>
            </div>

            <!-- REGISTER PANEL -->
            <div class="form-panel">
                <h2>Cadastro</h2>
                <% if (err==='register' ) { %>
                    <div class="login-alert error">Erro no cadastro. Verifique dados.</div>
                    <% } %>
                        <form action="/register" method="POST">
                            <input type="text" name="name" placeholder="Nome completo" required>
                            <input type="email" name="email" placeholder="E-mail" required>
                            <input type="password" name="password" placeholder="Senha" required>
                            <input type="password" name="confirm" placeholder="Confirme a senha" required>
                            <button type="submit">Cadastrar</button>
                        </form>
                        <span class="switch" id="toLogin">J√° tem cadastro? Entre aqui.</span>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('formContainer');
        document.getElementById('toRegister').onclick = () => {
            container.classList.add('register-active');
        };
        document.getElementById('toLogin').onclick = () => {
            container.classList.remove('register-active');
        };
    </script>
</body>

</html>