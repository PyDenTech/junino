<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Agendamento de Festas Juninas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/header') %>
        <div class="container my-4">
            <h1 class="mb-4">Agendamento de Festas Juninas</h1>
            <div class="row">
                <% escolas.forEach(function(escola) { %>
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card h-100 text-center">
                            <img src="/img/<%= escola.slug %>.png" class="card-img-top" alt="<%= escola.name %>"
                                onerror="this.onerror=null; this.src='/img/default_school.png';">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <%= escola.name %>
                                </h6>
                                <a href="/agendar/<%= escola.id %>" class="btn btn-primary mt-2">Agendar</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
        <%- include('partials/footer') %>
</body>

</html>