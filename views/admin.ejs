<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Painel Administrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.11.3/main.min.css" />
</head>

<body>
    <%- include('partials/header') %>
        <div class="container-fluid my-4">
            <h2 class="mb-4">Painel Administrativo - Agendamentos</h2>
            <div id="calendar"></div>
        </div>
        <%- include('partials/footer') %>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.11.3/main.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.11.3/locales-all.min.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    var calendarEl = document.getElementById('calendar');
                    var calendar = new FullCalendar.Calendar(calendarEl, {
                        initialView: 'dayGridMonth',
                        locale: 'pt-br',
                        headerToolbar: {
                            left: 'prev,next today',
                            center: 'title',
                            right: 'dayGridMonth,timeGridWeek,timeGridDay'
                        },
                        events: '/admin/events',
                        editable: true,
                        eventDrop: function (info) {
                            var event = info.event;
                            var start = event.start;
                            var dateStr = start.getFullYear() + '-' + ('0' + (start.getMonth() + 1)).slice(-2) + '-' + ('0' + start.getDate()).slice(-2);
                            var hours = ('0' + start.getHours()).slice(-2);
                            var minutes = ('0' + start.getMinutes()).slice(-2);
                            var timeStr = hours + ':' + minutes;
                            fetch('/admin/events/update', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ id: event.id, date: dateStr, time: timeStr })
                            }).then(function (response) {
                                if (!response.ok) {
                                    alert('Erro ao atualizar agendamento.');
                                    info.revert();
                                }
                            }).catch(function () {
                                alert('Erro de rede ao atualizar.');
                                info.revert();
                            });
                        },
                        eventClick: function (info) {
                            var evento = info.event;
                            var detalhes = "Solicitante: " + evento.extendedProps.solicitante + "\\n";
                            detalhes += "E-mail: " + evento.extendedProps.email + "\\n";
                            detalhes += "Observações: " + evento.extendedProps.observacoes + "\\n\\n";
                            detalhes += "Deseja excluir este agendamento?";
                            if (confirm(detalhes)) {
                                fetch('/admin/events/delete', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ id: evento.id })
                                }).then(function (response) {
                                    if (response.ok) {
                                        evento.remove();
                                    } else {
                                        alert('Erro ao excluir agendamento.');
                                    }
                                }).catch(function () {
                                    alert('Erro de rede ao excluir.');
                                });
                            }
                        }
                    });
                    calendar.render();
                });
            </script>
</body>

</html>