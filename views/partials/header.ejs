<header class="bg-light py-3 mb-4 border-bottom">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="/img/logo.png" alt="Logo" style="height: 40px;" class="me-2">
            <span class="h5 mb-0">Canaã dos Carajás - Agendamento de Festas Juninas</span>
        </div>
        <div>
            <% if (session && session.userId) { %>
                <a href="/admin" class="me-3 link-secondary text-decoration-none">Admin</a>
                <a href="/logout" class="btn btn-outline-primary btn-sm">Sair</a>
                <% } else { %>
                    <a href="/login" class="btn btn-primary btn-sm">Admin</a>
                    <% } %>
        </div>
    </div>
</header>